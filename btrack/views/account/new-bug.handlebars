{{>header}}
<div class="container-fluid">
  {{>sidebar}}

  <form class="container w-75" action="/bugs/create" method="POST">
    {{>error}}

    <div class="form-group row mt-5">
      <h3 class="col-sm-2 col-form-label ">New Bug</h3>
      <div class="col-sm-10 mt-1">
        <p>Fill all the fields then click on Add in order to create a new bug.</p>
      </div>
    </div>
    <div class="form-group row mt-5">
      <label for="title" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input id="title" type="text" name="title" class="form-control" placeholder="Ex: Error when...">
      </div>
    </div>
   
    <div class="form-group row">
      <label for="des" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <textarea id="des" placeholder="Ex: This error occur when..." type="text" name="description" rows="3"
          class="form-control"></textarea>
      </div>
    </div>
    <div class="form-group row">
      <label for="sol" class="col-sm-2 col-form-label">Solution</label>
      <div class="col-sm-10">
        <textarea id="sol" type="text" name="solution" rows="3" class="form-control"
          placeholder="Ex: Some solution..."></textarea>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Services</label>
      {{#each servicesFromDB}}

      <div class="form-check form-check-inline">
        <input class="ml-3 form-check-input" name="services" type="checkbox" value="{{_id}}" id="{{name}}">
        <label class="form-check-label" for="{{name}}">{{name}}</label>
      </div>
      {{/each}}
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Status</label>
      <div class="col-sm-10">
        <input type="radio" name="status" checked value="Confirmed" /><label class="ml-1">Confirmed </label>
        <input class="ml-3" type="radio" name="status" value="In Progress" /> <label>In Progress </label>
        <input class="ml-3" type="radio" name="status" value="Resolved" /> <label>Resolved </label>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Severity</label>
      <div class="col-sm-10">
        <input type="radio" name="severity" checked value="Critical" /><label class="ml-1">Critical </label>
        <input class="ml-3" type="radio" name="severity" value="High" /> <label>High </label>
        <input class="ml-3" type="radio" name="severity" value="Medium" /> <label>Medium </label>
        <input class="ml-3" type="radio" name="severity" value="Low" /> <label>Low </label>
      </div>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
    <button type="reset" class="btn btn-secondary">Reset</button>

  </form>
</div>
{{>footer}}