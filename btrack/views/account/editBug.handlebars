{{>header}}
<div class="container-fluid">
  {{>sidebar}}
  <div>
    <h2>New instance</h2>
  </div>
  <h1>{{bug.title}}</h1>
  <h3>Rapporter par: {{bug.rapporter.firstname}} {{bug.rapporter.lastname}} </h3>
  <p>Description: {{bug.description}}</p>
  {{#each bug.solutions}}
  <h2>User: {{user_id.firstname}}</h2>
  <p>{{solution}}</p>
  {{/each}}

  <form action="/bugs/{{bug._id}}" method="POST">


    <label>
      Name
      {{!-- A remplir !!!!!--}}

      <input type="text" name="name" value="{{user.firstname}} {{user.lastname}}" />
    </label>
    <label>
      Solution
      <input type="text" name="solution" placeholder="the solution" />
    </label>
    <label>
      Services
      <select name="services" multiple>
        {{!-- afficher tous les service dans une boite select --}}
        {{#each servicesFromDB}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>
    </label>

    <div>
      Status :
      <label>Approved </label> <input type="radio" name="status" value="Approved" />
      <label>Not approved </label> <input type="radio" name="status" value="Not approved" />

    </div>


    <button type="submit">Save</button>
  </form>
</div>
{{>footer}}